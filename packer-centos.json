{
  "builders": [
    {
      "name": "centos-buildkite-agent",
      "vm_name":  "centos-buildkite-agent",
      "type": "vmware-iso",
      "communicator": "ssh",
      "ssh_pty": "true",


      "guest_os_type": "rhel7-64",
      "tools_upload_flavor": "linux",
      "headless": false,
      "disk_size": 8192,
      "iso_url": "http://192.168.1.30:8000/CentOS-7-x86_64-Minimal-1804.iso",
      "iso_checksum": "714acc0aefb32b7d51b515e25546835e55a90da9fb00417fbee2d03a62801efd",
      "iso_checksum_type": "sha256",
      "vnc_disable_password": "True",
      "ssh_username": "tempuser",
      "ssh_password": "tempuser",
      "ssh_timeout": "15m",
      "disk_type_id": "thin",


      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'tempuser'|sudo -S sh 'shutdown.sh'",
      "remote_type": "esx5",
      "remote_host": "{{user `esxi_host`}}",
      "remote_datastore": "{{user `esxi_datastore`}}",
      "remote_username": "{{user `esxi_username`}}",
      "remote_password": "{{user `esxi_password`}}",
      "keep_registered": true,
      "keep_registered": true,
      "http_directory": ".",
      "boot_wait": "7s",

      "vmx_data": {
        "ethernet0.networkName": "VS-192.168.1.0"
      },
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/scripts/ks.cfg<enter><wait>"
      ]
 
    }],


  "provisioners": [
    {
      "type": "file",
      "source": "authorized_keys",
      "destination": "/tmp/authorized_keys"
    }, 
    {
      "type": "file",
      "source": "sshd_config",
      "destination": "/tmp/sshd_config"
    },
    {
      "type": "shell",
      "inline": ["cd /tmp && wget http://192.168.1.30:8000/scripts/centos-ansible.sh"]
    },
    {
      "inline": [
        "chmod a+x /tmp/centos-ansible.sh && /tmp/centos-ansible.sh"
      ],
      "type": "shell",
      "execute_command": "echo 'tempuser' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'"
    },
    {
      "type": "ansible-local",
      "playbook_file": "./ansible-playbook-centos.yml"
    },
    {
      "type": "shell",
      "execute_command": "echo 'tempuser' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "script": "scripts/centos-vmware-cleanup.sh"
    }
  ]    
}
